       "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>

	<definition name="baseLayout" template="/BaseLayout.jsp">
		<put-attribute name="title" value="" />
		<put-attribute name="header" value="/Header.jsp" />
		<put-attribute name="menu" value="/Menu.jsp" />
		<put-attribute name="breadcrumb" value="/Breadcrumb.jsp" />
		<put-attribute name="body" value="" />
		<put-attribute name="footer" value="/Footer.jsp" />
		<put-list-attribute name="javascripts">
			<add-attribute value="" />
		</put-list-attribute>
		<put-list-attribute name="stylesheets">
			<add-attribute value="/resources/css/bootraps/bootstrap.css" />
			<add-attribute value="/resources/css/bootraps/bootstrap-responsive.css" />
			<add-attribute value="/resources/css/main.css"/>
			<add-attribute value="/resources/css/style.css" />
		</put-list-attribute>
	</definition>

	<definition name="welcome" extends="baseLayout">
		<put-attribute name="title" value="Welcome" />
		<put-attribute name="body" value="/Welcome.jsp" />
	</definition>

</tiles-definitions>